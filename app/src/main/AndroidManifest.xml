<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chaos">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Chaos">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutXmlActivity"
            android:exported="false"
            android:label="About Me (XML)"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".AboutComposeActivity"
            android:exported="false"
            android:label="About Me (Compose)" />
        <activity
            android:name=".Hour1LayoutsActivity"
            android:exported="false"
            android:label="Hour 1: Layouts" />
        <activity
            android:name=".Hour2FunctionsActivity"
            android:exported="false"
            android:label="Hour 2: Functions" />
        <activity
            android:name=".Hour3DiceRollerActivity"
            android:exported="false"
            android:label="Hour 3: Dice Roller" />
    </application>

</manifest>